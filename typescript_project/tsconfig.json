{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*" // Adjust this to your source directory
    ],
    "exclude": [
        "node_modules", // Exclude node_modules from compilation
    ]
  }